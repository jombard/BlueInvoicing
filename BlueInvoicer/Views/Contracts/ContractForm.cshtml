@model BlueInvoicer.ViewModels.ContractsFormViewModel
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm(Model.Action, "Contracts"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.Id)
    @Html.HiddenFor(c => c.ClientId)

    <div class="form-group">
        @Html.DisplayFor(m => m.Client, new { @class = "h3" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StartDate)
        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", placeholder = "dd/mm/yyyy" })
        @Html.ValidationMessageFor(m => m.StartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EndDate)
        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", placeholder = "dd/mm/yyyy" })
        @Html.ValidationMessageFor(m => m.EndDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Rate)
        @Html.TextBoxFor(m => m.Rate, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Rate)
    </div>
    <div class="form-group">
        
    </div>
}
